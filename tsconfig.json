{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/**/*", "typings"],
  "exclude": ["node_modules"]
}
